[Unit]
Description=A symmetric RTP proxy
After=network.target

[Service]
Type=notify
User=rtpproxy
Group=rtpproxy
EnvironmentFile=/etc/sysconfig/rtpproxy
PIDFile=/var/run/rtpproxy/rtpproxy.pid
ExecStart=/usr/bin/rtpproxy -f -p /var/run/rtpproxy/rtpproxy.pid -A {{ ip_public }} -F -l {{ ip_private }} -m {{ rtp_start }} -M {{ rtp_stop }} -s udp:*:7722 -d INFO

[Install]
Also=rtpproxy.socket
WantedBy=multi-user.target